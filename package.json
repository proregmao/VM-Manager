{
  "name": "vm-manager",
  "version": "1.0.0",
  "description": "一个用于管理远程Ubuntu服务器上虚拟机的Mac应用程序",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "start": "electron ."
  },
  "keywords": [
    "electron",
    "react",
    "vite",
    "vm",
    "virtual-machine",
    "cockpit"
  ],
  "author": "proregmao",
  "license": "MIT",
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.12.2",
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ssh2": "^1.15.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^16.2.8",
    "electron-builder": "^23.6.0",
    "vite": "^4.5.0"
  },
  "build": {
    "appId": "com.proregmao.vmmanager",
    "productName": "VM Manager",
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    }
  }
}
